- if @current_project

  .task_header
    - if @current_project.editable?(current_user)
      %p.text_actions
        %span= link_to "Reorder task lists", "#"

    %h2= "Task lists for this project"

  - if @current_project.editable?(current_user)
    = task_list_form(@current_project,TaskList.new)

  - if @task_lists.any?
    #task_lists
      = tabular_task_lists(@current_project,@task_lists,@sub_action)
  - else
    = task_list_primer(@current_project)
  
  - content_for :column do
    = task_list_column(@current_project,@task_lists,@sub_action,@task_list)

- else
  %h2= t('.tasks_for_all_projects')
  = tasks_for_all_projects(@tasks)

  - content_for :column do
    = my_tasks(current_user.assigned_tasks(:all))
  
    %h2 Other views
    = subscribe_to_calendars_link
    = print_task_lists_link