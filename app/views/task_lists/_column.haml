- if project.editable?(current_user)
  = task_list_link(project)
- else
  %p= t('.cant_create')

- if location_name == 'show_tasks'
  %h2= "This task"
  %p
    %p
      = "Status:"
      = task_status(@task,:column)
    - if @task.due_on
      %p
        = "Due on:"
        = render_due_on(@task,current_user)
    %p= render_assignment(@task,current_user)
  

= banner(@events,@chart)

- case location_name
  - when 'index_task_lists'
    %h2= "Filter tasks by..."
    = task_navigation(project)

    = my_tasks(current_user.assigned_tasks(:all))
  - when 'show_task_lists', 'show_tasks'
    %h2= @task_list
    = sidebar_tasks(@task_list.tasks)

%h2 Other views

= subscribe_to_calendar_link(project)
= print_task_lists_link(project)